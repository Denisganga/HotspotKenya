<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HotspotKenya - Fast and Reliable Internet</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">HotspotKenya</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/packages">Packages</a>
                    </li>
                    <% if(typeof user != 'undefined' && user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <%= user.name %>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/dashboard">Dashboard</a>
                                <a class="dropdown-item" href="/users/profile">My Profile</a>
                                <a class="dropdown-item" href="/users/active-package">My Package</a>
                                <a class="dropdown-item" href="/users/payment-history">Payment History</a>
                                <% if(user.role === 'admin') { %>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/admin">Admin Panel</a>
                                <% } %>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="/logout">Logout</a>
                            </div>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register">Register</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <header class="hero-section">
        <div class="container text-center">
            <h1 class="display-4">Fast and Reliable Internet</h1>
            <p class="lead">Connect to the world with HotspotKenya's high-speed internet packages</p>
            <a href="/packages" class="btn btn-primary btn-lg">View Packages</a>
        </div>
    </header>

    <!-- Features Section -->
    <section class="features-section py-5">
        <div class="container">
            <h2 class="text-center mb-5">Why Choose HotspotKenya?</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-bolt fa-3x mb-3 text-primary"></i>
                            <h3 class="card-title">High Speed</h3>
                            <p class="card-text">Experience lightning-fast internet speeds for streaming, gaming, and browsing.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-shield-alt fa-3x mb-3 text-primary"></i>
                            <h3 class="card-title">Secure Connection</h3>
                            <p class="card-text">Our network is secured with the latest encryption technology to protect your data.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-money-bill-wave fa-3x mb-3 text-primary"></i>
                            <h3 class="card-title">Affordable Packages</h3>
                            <p class="card-text">Choose from a variety of packages that fit your budget and internet needs.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Popular Packages Section -->
    <section class="packages-section py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5">Popular Packages</h2>
            <div class="row" id="popular-packages">
                <!-- Packages will be loaded here via JavaScript -->
                <div class="col-12 text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                </div>
            </div>
            <div class="text-center mt-4">
                <a href="/packages" class="btn btn-outline-primary">View All Packages</a>
            </div>
        </div>
    </section>

    <!-- How It Works Section -->
    <section class="how-it-works-section py-5">
        <div class="container">
            <h2 class="text-center mb-5">How It Works</h2>
            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="step text-center">
                        <div class="step-number">1</div>
                        <h4>Register</h4>
                        <p>Create an account with your details</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="step text-center">
                        <div class="step-number">2</div>
                        <h4>Choose Package</h4>
                        <p>Select a package that suits your needs</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="step text-center">
                        <div class="step-number">3</div>
                        <h4>Pay via M-Pesa</h4>
                        <p>Make payment using M-Pesa</p>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <div class="step text-center">
                        <div class="step-number">4</div>
                        <h4>Connect</h4>
                        <p>Start browsing with your credentials</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>HotspotKenya</h5>
                    <p>Providing fast and reliable internet services across Kenya.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-white">Home</a></li>
                        <li><a href="/packages" class="text-white">Packages</a></li>
                        <li><a href="/login" class="text-white">Login</a></li>
                        <li><a href="/register" class="text-white">Register</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Contact Us</h5>
                    <address>
                        <p><i class="fas fa-map-marker-alt mr-2"></i> Nairobi, Kenya</p>
                        <p><i class="fas fa-phone mr-2"></i> +254 700 000000</p>
                        <p><i class="fas fa-envelope mr-2"></i> info@hotspotkenya.com</p>
                    </address>
                </div>
            </div>
            <hr class="bg-light">
            <div class="text-center">
                <p>&copy; <%= new Date().getFullYear() %> HotspotKenya. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <script src="/js/main.js"></script>
    <script>
        // Load popular packages
        $(document).ready(function() {
            $.ajax({
                url: '/api/packages/popular',
                method: 'GET',
                success: function(data) {
                    const packagesContainer = $('#popular-packages');
                    packagesContainer.empty();
                    
                    if (data.length === 0) {
                        packagesContainer.html('<div class="col-12 text-center"><p>No packages available at the moment.</p></div>');
                        return;
                    }
                    
                    data.forEach(function(package) {
                        packagesContainer.append(`
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <img src="${package.image}" class="card-img-top" alt="${package.name}">
                                    <div class="card-body">
                                        <h5 class="card-title">${package.name}</h5>
                                        <p class="card-text">${package.description}</p>
                                        <ul class="list-unstyled">
                                            <li><strong>Price:</strong> KES ${package.price}</li>
                                            <li><strong>Duration:</strong> ${package.duration} days</li>
                                            <li><strong>Data:</strong> ${package.dataLimit} MB</li>
                                            <li><strong>Speed:</strong> ${package.speed}</li>
                                        </ul>
                                    </div>
                                    <div class="card-footer bg-white border-top-0">
                                        <a href="/packages/${package._id}" class="btn btn-primary btn-block">View Details</a>
                                    </div>
                                </div>
                            </div>
                        `);
                    });
                },
                error: function() {
                    $('#popular-packages').html('<div class="col-12 text-center"><p>Failed to load packages. Please try again later.</p></div>');
                }
            });
        });
    </script>
</body>
</html>
